<div id="post_show_container">
  <div id="post_show_container_upper">
  <div id="post_show_container_header">
    <h3>Post #<%= @post.id%> by <%=@user.Name%> Title: <%= @post.Title%></h3>
    <h5>Comments:<%= @post.CommentsCounter%> Likes: <%=@post.LikesCounter%></h5>
  </div>
  <p><%= @post.Text %></p>
  </div>
  <% @comments=Comment.where(post_id:@post.id) %>
  <div id="container_index_posts_show_comments_container">
    <% @comments.each do |comment| %>
      <p><%=@user.Name%>: <%= comment.id %>  Comment: <%= comment.Text %></p>
      <% if can? :destroy, comment %> 
        <%= button_to "Delete comment", user_post_comment_path(@post.user_id, @post.id, comment.id), method: :delete, data: {confirm: "confirm to delete"} %>
      <% end %>
    <% end %>
  </div>
</div>